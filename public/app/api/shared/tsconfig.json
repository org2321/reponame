{
  "extends": "../../tsconfig.json",
  "include": ["src"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@core/*": ["../../core/src/*"],
      "@core_proc/*": ["../../../client/core_process/src/*"],
      "@infra/*": ["../infra/src/*"],
      "@vendor/*": ["../vendor/*"]
    },
    "lib": ["es6", "es2016.array.include", "dom"],
    "target": "es6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "jsx": "react",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "noEmit": true,
    "incremental": true,
    "resolveJsonModule": true
  }
}
